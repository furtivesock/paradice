{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    <div class="row mt-5">
        <div class="container mt-5">
            <div class="offset-md-3 offset-lg-3 col-xs-12 col-sm-12 col-md-6 col-lg-6 align-middle">
                <h1 class="mt-5 h3 mb-4 font-weight-normal text-center">Connexion</h1>
                
                {# User's username #}
                <label for="inputUsername" class="sr-only">Username</label>
                <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control mb-3" placeholder="Nom d'utilisateur" required autofocus>
                
                {# User's password #}
                <label for="inputPassword" class="sr-only">Password</label>
                <input type="password" name="password" id="inputPassword" class="form-control mb-3" placeholder="Mot de passe" required>

                {# CSRF token to avoid request from an unknow origin #}
                <input type="hidden" name="_csrf_token"
                    value="{{ csrf_token('authenticate') }}"
                >

                <button class="btn btn-lg btn-primary" type="submit" style="width: 100%;">
                    Sign in
                </button>

                <a href="{{ path('app_register') }}">Cr√©er un compte</a>
            </div>
        </div>
    </div>
</form>
{% endblock %}
